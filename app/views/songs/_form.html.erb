<%= simple_form_for @song do |f| %>
  <%= f.input :title, label: "Song Title" %>
  <%= f.input :artist %>
  <%= f.input :difficulty, 
        :as => :select, 
        :collection => ['Beginner', 'Intermediate', 'Expert'], 
        :include_blank => false, 
        :label => "Difficulty" %>
  <%= f.input :lyrics %>
  <%= f.button :submit %>
<% end %>